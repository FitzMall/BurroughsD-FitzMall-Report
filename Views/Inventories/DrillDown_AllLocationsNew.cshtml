@model IEnumerable<WebApplication6.Models.Inventory>

@{
    int counter = 0;

    ViewBag.Title = "New Cars On FitzMall";
}
<link href="\Content\tableStyle.css" rel="stylesheet" type="text/css" sizes="">

<h2>New Cars On FitzMall</h2>
<input type="button" value="Back To List" onclick="history.back()">


<table class="table" width=30 % height=30 align=left>

    <tr>
        <th>
            Store/Branch
        </th>
        <th>
            Status
        </th>
        <th>
            Serial#
        </th>
        <th>
            Stock#
        </th>
        <th>
            Year
        </th>
        <th>
            Model
        </th>
        <th>
            Line
        </th>
        <th>
            Color
        </th>
        <th>
            Invoice Amount
        </th>
        <th>
            MSRP
        </th>
    </tr>

    @foreach (var item in Model)
    {
        counter++;

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.STORE_BRANCH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STAT_CODE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STOCK_)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ORDER_)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MAKE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CARLINE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.COLOR_DESC)
        </td>
        <td @if (item.INV_AMT.Value == 0) { <text> style="background-color:silver;" </text> }>
            @Html.DisplayFor(modelItem => item.INV_AMT)
        </td>

        <td @if (item.MSRP.Value == 0) { <text> style="background-color:silver;" </text> }>
            @Html.DisplayFor(modelItem => item.MSRP)
        </td>

    </tr>

    }

    @counter


</table>
