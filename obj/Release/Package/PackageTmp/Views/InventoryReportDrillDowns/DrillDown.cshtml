<table class="table" style="font-size: 90%; width: 95%">
    @foreach (var item in Model)
    {
        counter++;
    <tr>
        <td style="width: 100px">
            @Html.DisplayFor(modelItem => item.LOCATION)
        </td>
        <td style="width: 200px">
            @Html.ActionLink("" + item.SERIAL_, "GoToFitzMall", new { keywordSearch = item.SERIAL_ }, new { target = "_blank" })
        </td>
        <td style="width: 120px">
            @Html.ActionLink("" + item.STOCK_, "GoToFitzMall", new { keywordSearch = item.STOCK_ }, new { target = "_blank" })

        </td>
        <td style="width: 75px">
            @Html.DisplayFor(modelItem => item.STAT_CODE)
        </td>
        <td style="width: 75px">
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
        <td style="width: 150px; text-align: center">
            @Html.DisplayFor(modelItem => item.MAKE)
        </td>
        <td style="width: 250px; text-align: center">
            @Html.DisplayFor(modelItem => item.CARLINE)
        </td>
        <td style="width: 400px">
            @Html.DisplayFor(modelItem => item.EXT_COLOR)
        </td>
        <td @if (item.CustomPhotos == 0) { <text> style="background-color:yellow; width: 120px; text-align: center" </text>  } else { <text> style="width: 120px; text-align: center" </text> }>
            @Html.DisplayFor(modelItem => item.CustomPhotos)
        </td>
        <td @if (item.ChromeStyleID.Value == 0) { <text> style="background-color:yellow; width: 120px" </text>  } else { <text> style="width: 120px" </text> }>
            @if (item.ChromeStyleID.Value > 0)
            {
                @Html.DisplayFor(modelItem => item.ChromeStyleID)
            }
            else
            {
                @("------");
            }
        </td>
        <td @if (item.INVOICE.Value == 0) { <text> style="background-color:yellow; width: 100px" </text>  } else { <text> style="width: 100px" </text> }>
            @Html.DisplayFor(modelItem => item.INVOICE)
        </td>
        <td @if (item.MSRP.Value == 0) { <text> style="background-color:yellow; width: 100px" </text>  } else { <text> style="width: 100px" </text> }>
            @Html.DisplayFor(modelItem => item.MSRP)
        </td>
        <td @if (item.ChromeOptions != "Y") { <text> style="background-color:yellow; width: 90px; text-align: center" </text>  } else { <text> style="width: 90px; text-align: center" </text> }>
            @Html.DisplayFor(modelItem => item.ChromeOptions)
        </td>
        <td style="text-align: center">
            @Html.DisplayFor(modelItem => item.DAYS_IN_STOCK)
        </td>

    </tr>

    }

</table>
@counter records.


